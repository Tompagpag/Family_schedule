<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 bg-white mt-5">
    <h2>Ajouter un contact </h2>
      <%= simple_form_for [@family, @contact] do |f| %>
        <div class="form-inputs">
            <%= f.input :first_name, label: 'Prénom', placeholder: "Alex" %>
            <%= f.input :last_name, label: 'Nom', placeholder: "Desrosiers" %>
            <%= f.input :email, label: 'Email', placeholder: "me@gmail.com" %>
            <%= f.input :phone_number, label: 'Numéro de téléphone', placeholder: "+33 667546723" %>
            <%= f.input :comment, label: 'Type de connaissance', placeholder: "Grand-père? Babysitter?" %>
        </div>
        <div class="form-actions">
          <%= f.button :button, 'Ajouter', class:'button-52-peach' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
