<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 bg-white mt-5">
      <div class="form-wrapper" style="width: 400px; margin: 0px auto;">
        <h2 style="margin-bottom: -30px;">Ajouter un événement</h2>
          <%= simple_form_for [@family, @event] do |f| %>
          <div class="d-flex">
            <div class="row event-form-font" data-controller="reminder">

              <%= f.input :family_member, collection: current_user.family.family_members, label: 'Ajoute un membre' %>
              <%= f.input :title, label: "Titre" %>
              <%= f.input :start_at, as: :string, placeholder: 'select date', required: true, input_html: {class: "datepicker" }, label: "Début" %>
              <%= f.input :end_at, as: :string, required: true, input_html: {class: "datepicker"}, label: "Fin" %>

              <%= f.input :contact, label: 'Contact' %>
              <%= f.input :add_reminder, as: :boolean, checked_value: 'true', unchecked_value: 'false', label: 'Ajouter un rappel ?', input_html: { data: { action: 'change->reminder#addReminder', reminder_target: 'test' } } %>
              <div class="d-none" data-reminder-target="reminderDetails">
                <%= f.input :reminder_date, as: :string, required: true, label: 'Date de rappel', input_html: {class: "datepicker" } %>
                <%= f.input :reminder_comment, label: "Commentaire" %>
              </div>

            </div>
          </div>

          <%= f.button :button, 'Créer un événement', class: " button-52-peach" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
